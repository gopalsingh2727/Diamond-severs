{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
   "include": [
    "**/*.ts",
    "handlers/**/*",
    "models/**/*",
    "services/**/*",
    "utils/**/*",
    "utiles/**/*",
    "config/**/*",
    "middleware/**/*",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
